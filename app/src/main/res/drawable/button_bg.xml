<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 圆角 -->
    <corners android:radius="12dp" />

    <!-- 半透明填充色 - 这是实现玻璃效果的关键 -->
    <solid android:color="#80FFFFFF" /> <!-- #80 = 50% 透明度, FFFFFF = 白色 -->

    <!-- 边框（可选，增强玻璃感） -->
    <stroke
        android:width="1dp"
        android:color="#B3FFFFFF" /> <!-- 更浅的白色边框 -->

    <!-- 内边距（可选） -->
    <padding
        android:left="16dp"
        android:top="12dp"
        android:right="16dp"
        android:bottom="12dp" />

</shape>